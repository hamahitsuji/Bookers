<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>
	<div class="field">
		<%= f.label :title, 'Title' %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :body, 'Body' %>
		<%= f.text_area :body %>
	</div>
	<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "show", book_path(@book) %>|
<%= link_to "Back", books_path %>