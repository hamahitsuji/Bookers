<h1>Books</h1>
<table>
	<% @books.each do |book| %>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan=3></th>
		</tr>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book), method: :delete %></td>
		</tr>
	<% end %>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<%= f.text_field :title %>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>
<% end %>