<h1>Books</h1>
<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th colspan=3></th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book), method: :delete %></td>
		</tr>
	<% end %>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>
	<div class="field">
		<%= f.label :title, 'Title' %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :body, 'Body' %>
		<%= f.text_area :body %>
	</div>
	<%= f.submit 'Create Book' %>
<% end %>